<view class="__badge {{className}} {{!$slots.inner ? '__badge-not-a-wrapper' : ''}}">
  <view style="background: linear-gradient(to bottom, {{backgroundColor}}, {{backgroundColor}});" class="__badge-text
      {{ text.toString().length > 1 ? '__badge-double' : ''}}" a:if="{{!dot}}">
    <text
      class="__badge-text-padding">{{typeof text === 'number' && text > overflowCount ? overflowCount + '+' : text }}</text>
    <text
      class="__badge-text-inner">{{typeof text === 'number' && text > overflowCount ? overflowCount + '+' : text }}</text>
  </view>
  <view style="background: linear-gradient(to bottom, {{backgroundColor}}, {{backgroundColor}});"
    class="__badge-text is-dot" a:if="{{dot}}"></view>
  <slot name="inner" />
</view>