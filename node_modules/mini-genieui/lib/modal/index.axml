<view a:if="{{show}}" class="__modal">
  <view class="__modal-mask" onTap="onModalClose"></view>
  <view class="__modal-card {{className}}">
    <image class="__modal-card-close-btn" onTap="onModalClose"
      src="https://gw.alicdn.com/tfs/TB1f9TEn4z1gK0jSZSgXXavwpXa-50-50.png"></image>
    <slot></slot>
  </view>
</view>