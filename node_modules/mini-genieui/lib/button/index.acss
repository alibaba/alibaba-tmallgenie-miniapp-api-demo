.button{box-sizing:border-box;display:inline-block;margin:auto}.button-primary{background-color:#0082ff;color:#fff}.button-primary--ghost-true{border:1px solid #0082ff;background-color:transparent;color:#0082ff}.button-default{border:1px solid #92a4b0;color:#92a4b0;background-color:transparent}.button-default--ghost-true{border:1px solid #fff;background-color:transparent;color:#fff}.button-warn{background-color:#fd4f54;color:#fff}.button-warn--ghost-true{border:1px solid #fd4f54;background-color:transparent;color:#fd4f54}.button-large{border-radius:30px;padding:14px 35px;font-size:24px}.button-medium{border-radius:22.5px;padding:7px 32px 7px;font-size:22px}.button-small{border-radius:19px;padding:8px 23px;font-size:18px}