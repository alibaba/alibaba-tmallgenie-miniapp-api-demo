<view class="g-dialog-{{show ? 'show' : 'hide'}}">
  <view class="g-dialog-mask"/>
    <view class="g-dialog-document">
	  <view class="g-dialog-content">
	    <view class="g-dialog-header">
		  {{title}}
		</view>
		<!-- 自定义内容 -->
		<slot/>
		<view class="g-dialog-footer">
		  <text  onTap="onLeftButtonClick" class="g-dialog-button {{reverse?'g-dialog-button-left-reverse':'g-dialog-button-left'}}" style={{leftButtonCls}}>{{leftButtonText}}</text>
		  <view class="g-dialog-button-divider"/>
		  <text onTap="onRightButtonClick" class="g-dialog-button {{reverse?'g-dialog-button-right-reverse':'g-dialog-button-right'}}" style={{rightButtonCls}}>{{rightButtonText}}</text>
		</view>
	  </view>
  </view>
</view>
