<view class="__slider">
  <text class="__slider__text" a:if="{{showValue}}">{{displayValue}}</text>
  <slider style="flex: 1; margin-left: 20px;" min="{{min}}" max="{{max}}" step="{{step}}" disabled="{{disabled}}"
    value="{{value}}" show-value="{{false}}" onChange="onChange" onChanging="onChanging"
    background-color="{{backgroundColor}}" track-size="{{trackSize}}" handle-size="{{handleSize}}"
    handle-color="{{handleColor}}" active-color="{{activeColor}}">
  </slider>
</view>