function getCardStyle(type, cover) {
  let height = '';
  if (type === 'vertical') {
    height = '440px'
  } else if (type === 'horizontal') {
    height = '165px'
  } else if (type === 'square') {
    height = '220px'
  }
  let style = `height: ${height};`;
  if (cover) {
    style = style + `background: center / cover no-repeat url(${cover})`;
  }
  return style;
}

export default {
  getCardStyle
}