.card-bg{background-color:rgba(94,134,173,.3);position:relative}.card-horizontal,.card-vertical{width:296px}.card-square{width:216px}.card-subTitle{color:rgba(246,246,246,.8);text-shadow:rgba(0,0,0,.12) 0 1px 1px 0;font-size:32px}.card-subTitle__overlay{position:absolute;bottom:17px;right:16px}.card-subTitle__normal{margin-top:12px}.card-title{font-size:36px;line-height:44px;color:#fff;margin-top:15px}.card-horizontal-mask,.card-square-mask,.card-vertical-mask{height:150px;background:linear-gradient(to bottom,rgba(0,0,0,0),#000);position:absolute;bottom:0;width:100%;opacity:.8}