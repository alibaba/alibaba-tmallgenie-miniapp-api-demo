<import-sjs name="util" from="./util.sjs" />
<view>
  <view a:if="{{['horizontal', 'vertical'].includes(type)}}" class="{{cardCls}}">
    <view style="{{util.getCardStyle(type, cover)}}" class="card-bg card-{{type}}">
      <view a:if="{{mask}}" class="card-{{type}}-mask"></view>
      <!-- <badge a:if="{{index}}" text="{{index}}"></badge> -->
      <view class="card-subTitle__overlay card-subTitle">{{subTitle}}</view>
    </view>
    <view class="card-title">{{title}}</view>
  </view>

  <view a:elif="{{ type === 'square'}}" class="{{cardCls}}">
    <view style="{{util.getCardStyle(type, cover)}}" class="card-bg card-square">
      <view a:if="{{mask}}" class="card-square-mask"></view>
    </view>
    <view class="card-title">{{title}}</view>
    <view class="card-subTitle card-subTitle__normal">{{subTitle}}</view>
  </view>
</view>